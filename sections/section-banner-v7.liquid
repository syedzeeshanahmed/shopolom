<div data-section-id="{{ section.id }}" data-section-type="section-banner-v7" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v7 mt-all">
    <div class="container container-v2">
      <div class="row row-banner-{{ section.id }}">
        <div class="col-md-5">
          <div class="banner-item">
            <div class="banner-img">
              <a href="{{section.settings.url_banner1}}" class="box-img">
                <img data-src="{% if section.settings.banner_img1 != blank %} {{section.settings.banner_img1 | img_url : 'master'}}
                               {% else %} https://via.placeholder.com/860x960 
                               {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner_">
              </a>
            </div>
            <div class="banner-content">
              {% if section.settings.btn_banner1 != blank %}
              <a href="{{section.settings.url_banner1}}" class="btn-banner btn-banner-{{ section.id }}">{{section.settings.btn_banner1}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-md-7">
          <div class="row row-banner-{{ section.id }}">
            <div class="col-sm-6">  
              <div class="banner-item">
                <div class="banner-img">

                  <a href="{{section.settings.url_banner2}}" class="box-img">
                    <img data-src="{% if section.settings.banner_img2 != blank %} {{section.settings.banner_img2 | img_url : 'master'}}
                                   {% else %} https://via.placeholder.com/430x335
                                   {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner_">
                  </a>
                </div>
                <div class="banner-content">
                  {% if section.settings.btn_banner2 != blank %}
                  <a href="{{section.settings.url_banner2}}" class="btn-banner btn-banner-{{ section.id }}">{{section.settings.btn_banner2}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="col-sm-6">  
              <div class="banner-item">
                <div class="banner-img">

                  <a href="{{section.settings.url_banner3}}" class="box-img">
                    <img data-src="{% if section.settings.banner_img3 != blank %} {{section.settings.banner_img3 | img_url : 'master'}}
                                   {% else %} https://via.placeholder.com/430x335
                                   {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner_">
                  </a>
                </div>
                <div class="banner-content">
                  {% if section.settings.btn_banner3 != blank %}
                  <a href="{{section.settings.url_banner3}}" class="btn-banner btn-banner-{{ section.id }}">{{section.settings.btn_banner3}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          <div class="banner-item">
            <div class="banner-img">

              <a href="{{section.settings.url_banner4}}" class="box-img">
                <img data-src="{% if section.settings.banner_img4 != blank %} {{section.settings.banner_img4 | img_url : 'master'}}
                               {% else %} https://via.placeholder.com/860x320 
                               {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner_">
              </a>
            </div>
            <div class="banner-content">
              {% if section.settings.btn_banner4 != blank %}
              <a href="{{section.settings.url_banner4}}" class="btn-banner btn-banner-{{ section.id }}">{{section.settings.btn_banner4}}</a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section-banner-v7 .banner-item .banner-content .btn-banner-{{ section.id }} {
    color: {{section.settings.color_btn}};
    background: {{section.settings.bg_btn}};
    transition: all .3s;
  }
  .section-banner-v7 .banner-item .banner-content .btn-banner-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
    background: {{section.settings.bg_btn_hover}};
  }
</style>
